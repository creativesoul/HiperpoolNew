<div id="myModal1" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Sign up As a Candidate</h3>
  </div>
  <%= form_for(@candidate,:remote => true) do |f| %>
    <div class="modal-body">

      <div id='candidate_error'>
      </div>

      <div class='row'>
        <div class='span3'>
          <%= f.text_field :first_name,:placeholder => "FIRST NAME" %>
        </div>

        <div class='span3'>
          <%= f.text_field :last_name ,:placeholder => "LAST NAME"%>
        </div>
      </div><br/>

      <div class='row'>
        <div class='span3'>
          <%= f.text_field :city ,:placeholder => "CITY"%>
        </div>

        <div class='span3'>
          <%= f.select :country,Candidate.country_names,{} ,{:class => "form-control"}%>
        </div>
      </div><br/>

      <div class='row'>
        <div class='span6'>
          <%= f.text_field :email,:placeholder => "EMAIL ADDRESS" %>
        </div>
      </div><br>
      
      <div class='row' style='text-align: center;'>
        <div class='span6'>
          <%= f.submit "SIGN UP AS A CANDIDATE" ,:class => "btn btn-danger"%>
        </div>
      </div>

    </div>


  <% end %>
</div>